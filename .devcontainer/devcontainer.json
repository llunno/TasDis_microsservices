// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
{
	"name": "Kubernetes - Minikube-in-Docker",
	"runArgs": ["--name=TasDis-Microservices"],
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerFile": "Dockerfile",

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"enableNonRootDocker": "true",
			"moby": "false",
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "latest"
		},
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": true,
			"version": "21",
			"jdkDistro": "open",
			"gradleVersion": "latest",
			"mavenVersion": "latest",
			"antVersion": "latest",
			"groovyVersion": "latest"
		}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// forwarding gateway port 8080, postgres port 5432, rabbitmq port 15672.
	"forwardPorts": [8080, 5432, 15672],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "minikube start",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
	"postStartCommand": {
		"install-k9s": "curl -sS https://webinstall.dev/k9s | bash",
		"install-helm-pkgs": "helm upgrade -i rabbitmq oci://registry-1.docker.io/bitnamicharts/rabbitmq && helm upgrade -i -f .devcontainer/pg-values.yaml postgresql oci://registry-1.docker.io/bitnamicharts/postgresql"
	},
	
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"ms-azuretools.vscode-docker",
				"vscjava.vscode-java-pack",
				"redhat.java",
				"ipedrazas.kubernetes-snippets",
				"lunuan.kubernetes-templates",
				"mindaro.mindaro",
				"vscjava.vscode-spring-initializr",
				"vmware.vscode-boot-dev-pack",
				"developersoapbox.vscode-springboot-snippets",
				"sohibe.java-generate-setters-getters",
				"alefragnani.project-manager",
				"vscjava.vscode-java-dependency",
				"mhutchie.git-graph",
				"eamodio.gitlens",
				"Gruntfuggly.todo-tree",
				"tombonnike.vscode-status-bar-format-toggle",
				"cweijan.vscode-database-client2",
				"rohinivsenthil.rabbitrace",
				"chrisdias.vscode-opennewinstance"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
